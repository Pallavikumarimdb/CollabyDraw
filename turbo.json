{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "env": [
        "WS_URL",
        "JWT_SECRET",
        "NEXTAUTH_URL",
        "DATABASE_URL"
      ],
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "public/**",
        "out/**",
        "build"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "copy:prisma": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}